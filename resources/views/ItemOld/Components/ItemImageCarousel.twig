{% set configItemName = config("Ceres.item.name") %}
<script type="x/template" id="vue-item-image-carousel">
    <div class="row">
        <div class="col-md-10 push-md-2 col-xs-12">
            <div id="single-carousel" class="owl-carousel owl-theme owl-single-item" v-el:single>
                <div v-for="image in currentVariation.documents[0].data.images | itemImages imageUrlAccessor | orderBy 'position'">
                    <a :href="image.url" data-lightbox="single-big-image-gallery">
                        <img alt="${ currentVariation.documents[0].data.texts | itemName {{configItemName}} }" class="owl-lazy" :data-src="image.url" itemprop="image.url">
                    </a>
                </div>
            </div>
        </div>
        <div class="pull-md-10 col-md-2 col-xs-12">
            <div class="owl-thumbs">
                <img alt="${ currentVariation.documents[0].data.texts | itemName {{configItemName}} }"  @click="goTo($index)" class="owl-thumb" v-bind:class="{ 'active': currentItem === $index }"
                     :src="imagePreview.url"
                     v-for="imagePreview in currentVariation.documents[0].data.images | itemImages 'urlPreview' | orderBy 'position'">
            </div>
        </div>
    </div>
</script>
