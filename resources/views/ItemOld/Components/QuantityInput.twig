<script type="x/template" id="vue-quantity-input">
    <div class="input-group order-quantity" :class="{'vert':vertical}" data-plentyflow-modul="Mengen-Auswahl">

        <button v-if="vertical"
                class="btn btn-secondary isPlus"
                type="button" @click="value++" :disabled="value >= max || waiting"
                data-plentyflow-element="text, button">+</button>

        <span class="input-group-btn " v-if="!vertical">
            <button class="btn btn-secondary"
                    type="button" @click="value--" :disabled="value <= min || waiting"
                    data-plentyflow-element="text, button">-</button>
        </span>

        <input type="text" class="form-control text-xs-center" size="3" maxlength="3" v-model="value" data-plentyflow-element="text, input, block">

        <button v-if="vertical"
                class="btn btn-secondary isMinus"
                type="button" @click="value--" :disabled="value <= min || waiting"
                data-plentyflow-element="text, button">-</button>


        <span class="input-group-btn" v-if="!vertical">
            <button class="btn btn-secondary"
                    type="button" @click="value++" :disabled="value >= max || waiting"
                    data-plentyflow-element="text, button">+</button>
        </span>

    </div>
</script>
